package com.Declan;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        final byte temperatureAddition = 32;
        final float temperatureMultiplication = (float) 1.8;

            Scanner scanner = new Scanner(System.in);
            
            System.out.print("Enter a degree in Celsius: ");
            byte celsiusTemperature = scanner.nextByte();
            int trueFahrenheitTemp = (int) (celsiusTemperature * temperatureMultiplication) + temperatureAddition;
            System.out.print("Your Temperature in Fahrenheit is: " + trueFahrenheitTemp);
            
            System.out.print(" ");
            System.out.print("Enter a degree in Fahrenheit: ");
            byte fahrenheitTemperature = scanner.nextByte();
            float trueCelsiusTemperature = (fahrenheitTemperature - temperatureAddition) / temperatureMultiplication;
            System.out.println("Your Temperature in Celsius is: " + trueCelsiusTemperature);
    }
}
