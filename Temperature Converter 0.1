package com.Declan;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
    final byte temperatureAddition = 32;
    final float temperatureMultiplication = (float)1.8;

        System.out.print("Enter a degree in Celsius: ");
        Scanner scanner = new Scanner(System.in);
        byte celsius = scanner.nextByte();

        int fahrenheit = (int)(celsius * temperatureMultiplication) + temperatureAddition;

        System.out.print("Your Temperature in Fahrenheit is: " + fahrenheit);
    }
}
